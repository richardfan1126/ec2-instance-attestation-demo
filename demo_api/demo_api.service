[Unit]
Description=Remote Attestation API Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/demo_api
ExecStart=/usr/bin/python3 /opt/demo_api/demo_api.py --port 8080
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
